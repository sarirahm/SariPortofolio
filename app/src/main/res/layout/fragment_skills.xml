                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FILKOM UB"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/mregular"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2022"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/mregular"
                                    android:textSize="10sp" />
